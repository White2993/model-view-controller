<h1>Eat the Burger</h1>

<h2>Burgers you've yet to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> cats/cat-block hungry=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers You've eaten</h2>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> cats/cat-block hungry=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Sleepy!<br>
    <input type="radio" name="hungry" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
